datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  orders    Order[]
  designs   Design[]
}

model Order {
  id          String   @id @default(uuid())
  userId      String
  previewUrl  String
  designUrl   String
  model       String
  color       String
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Design {
  id        String   @id @default(uuid())
  userId    String
  imageUrl  String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
