datasource db {
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  orders    Order[]
}

model Order {
  id         String   @id @default(uuid())
  userId     String
  imageUrl   String
  color      String
  material   String
  sizes      String   // JSON string: {"P": 5, "M": 10, ...}
  totalQty   Int
  status     String   @default("Pendente") // Pendente, Em Produção, Concluído
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

model Stamp {
  id              String   @id @default(uuid())
  userId          String
  name            String?
  frontImageUrl   String
  backImageUrl    String?
  frontDesignData String?
  backDesignData  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
}

model Message {
  id        String   @id @default(uuid())
  userId    String
  content   String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@index([userId])
}
