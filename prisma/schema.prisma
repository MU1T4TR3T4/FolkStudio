datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  orders    Order[]
}

model Order {
  id         String   @id @default(uuid())
  userId     String
  previewUrl String
  designUrl  String
  model      String
  color      String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}

model Stamp {
  id              String   @id @default(uuid())
  userId          String
  name            String?
  frontImageUrl   String
  backImageUrl    String?
  frontDesignData String?
  backDesignData  String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId])
}
